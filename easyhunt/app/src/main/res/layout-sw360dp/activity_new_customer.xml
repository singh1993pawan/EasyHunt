<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context="in.easyhunt.NewCustomer">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Registration"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>


    <Spinner
        android:id="@+id/selectdistrict"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"
        android:prompt="@string/spinner_title_for_district"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        />




    <Spinner
        android:id="@+id/selecttaluka"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"
        android:prompt="@string/spinner_title_for_taluk"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        />

    <Spinner
        android:id="@+id/selecthobli"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"
        android:prompt="@string/spinner_title_for_hobli"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_ut_layout"
        android:layout_width="300dp"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fname"
        android:hint="First Name"
        android:textAllCaps="false"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_teput_layout"
        android:layout_width="300dp"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/mname"
        android:hint="Middle Name"
        android:textAllCaps="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="300dp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/lname"
        android:hint="Last Name"
        android:textAllCaps="false"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_iut_layout"
        android:layout_width="300dp"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailids"
        android:hint="Email ID"
        android:textAllCaps="false"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_input_layout"
        android:layout_width="300dp"
        android:layout_marginTop="510dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/mobilenumber"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:textAllCaps="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_tet_input_layout"
        android:layout_width="300dp"
        android:layout_marginTop="570dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/alternateperson"
        android:hint="Alternate Contact Person"
        android:textAllCaps="false" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usname_text_input_layout"
        android:layout_width="300dp"
        android:layout_marginTop="630dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/alternatemobile"
        android:hint="Alternate Mobile Number"
        android:textAllCaps="false"
        android:inputType="phone" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_int_layout"
        android:layout_width="300dp"
        android:layout_marginTop="690dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/password1"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAllCaps="false" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_tput_layout"
        android:layout_width="300dp"
        android:layout_marginTop="750dp"
        android:layout_centerHorizontal ="true"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/password2"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textAllCaps="false"/>

    </android.support.design.widget.TextInputLayout>



    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/register"
        android:layout_marginTop="830dp"
        android:text="Register"
        android:textSize="24dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</ScrollView>